            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.setting.SettingActivity"/>
        </activity>
        <activity
            android:name=".ui.setting.sellerinformation.SellerInformationActivity"
            android:parentActivityName=".ui.setting.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar"
