            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.setting.SettingActivity"/>
        </activity>
        <activity
            android:name=".ui.setting.sellerinformation.edit.SellerInformationEditActivity"
            android:parentActivityName=".ui.setting.sellerinformation.SellerInformationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.setting.sellerinformation.SellerInformationActivity"/>
        </activity>
        <activity
            android:name=".ui.sellproducts.SellProductsActivity"
            android:parentActivityName=".ui.products.ProductsActivity"
            android:theme="@style/AppTheme.NoActionBar">
