<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.mash_up.a9tique">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".NinetiqueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.SplashTheme" />
        <activity android:name=".FacebookLogin" />
        <activity
            android:name=".ui.addeditproduct.AddEditProductActivity"
            android:label="@string/title_activity_add_edit_product"
            android:parentActivityName=".ui.products.SellerProductListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.products.SellerProductListActivity" />
        </activity>
        <activity
            android:name=".ui.products.SellerProductListActivity"
            android:label="@string/title_activity_seller_product_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.addeditproduct.categorysleleciton.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection"
            android:parentActivityName=".ui.addeditproduct.AddEditProductActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.addeditproduct.AddEditProductActivity" />
        </activity>
        <activity android:name=".CustomerGoodsDetailActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailImagesActivity" />
        <activity android:name=".InquireDialog"></activity>
    </application>

</manifest>