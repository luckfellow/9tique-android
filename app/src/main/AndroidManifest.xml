        <activity
            android:name=".ui.zzimproducts.ZzimProductsActivity"
            android:parentActivityName=".ui.products.ProductsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.products.ProductsActivity"/>
        </activity>
        <activity
            android:name=".ui.productdetail.customer.CustomerProductDetailActivity"
            android:parentActivityName=".ui.products.ProductsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.products.ProductsActivity"/>
        </activity>

        <service
            android:name=".service.TokenRefreshService"
            android:enabled="true"
            android:exported="false">
        </service>

        <receiver
            android:name=".networkstatus.NetworkChangeReceiver"
            android:enabled="false"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>