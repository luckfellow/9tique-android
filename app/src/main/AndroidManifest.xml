<?xml version="1.0" encoding="utf-8"?>
<manifest package="kr.co.mash_up.a9tique"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".NinetiqueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- kakao app key -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.FullScreen">

        </activity>
        <activity
            android:name=".KaKaoSignupActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.addeditproduct.AddEditProductActivity"
            android:label="@string/title_activity_add_edit_product"
            android:parentActivityName=".ui.products.SellerProductListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.products.SellerProductListActivity"/>
        </activity>
        <activity
            android:name=".ui.products.SellerProductListActivity"
            android:label="@string/title_activity_seller_product_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.addeditproduct.categorysleleciton.CategorySelectionActivity"
            android:label="@string/title_activity_category_selection"
            android:parentActivityName=".ui.addeditproduct.AddEditProductActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.addeditproduct.AddEditProductActivity"/>
        </activity>
        <activity
            android:name=".ui.productdetail.SellerProductDetailActivity"
            android:label="@string/title_activity_seller_product_detail"
            android:parentActivityName=".ui.products.SellerProductListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="kr.co.mash_up.a9tique.ui.products.SellerProductListActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>