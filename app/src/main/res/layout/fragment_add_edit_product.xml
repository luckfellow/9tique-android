<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e7e7"
    android:orientation="vertical"
    tools:context=".ui.addeditproduct.AddEditProductFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="사진"
                android:textColor="@color/black"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_image_title"
                android:layout_toEndOf="@id/tv_image_title"
                android:layout_toRightOf="@id/tv_image_title"
                android:text="(1/4)"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_image_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_image_title"
                android:layout_marginTop="4dp"
                android:text="첫번째 사진은 상품의 대표 이미지로 업로드 됩니다."
                android:textSize="12sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_image_description"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_brand_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="브렌드"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_brand_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_brand_title"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:hint="브렌드 명을 입력해주세요."
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_name_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_title"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:hint="상품명을 입력해주세요."
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_size_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이즈"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_size_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_size_title"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:hint="사이즈를 입력해주세요."
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/tv_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="가격"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="원"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/et_price_description"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@id/tv_price_unit"
                android:background="@color/very_light_grey"
                android:gravity="right|center_vertical"
                android:hint="0"
                android:inputType="numberDecimal"
                android:paddingRight="16dp"
                android:textColorHint="@color/grey"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_category_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_category_title"
                android:layout_marginTop="4dp"
                android:text="상품에 맞는 카테고리를 선택하세요."
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_category_select"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:baselineAlignBottom="@id/tv_category_title"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/ic_arrow_right_black"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="0dp"
        app:contentPadding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품 상세 설명"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/et_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_title"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:hint="상품에 대한 상세한 설명을 입력해주세요."
                android:inputType="textMultiLine"
                android:textColorHint="@color/grey"
                android:textSize="12sp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/my_sin"
        android:text="등록 완료"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>
