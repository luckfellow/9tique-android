<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.mash_up.a9tique.ui.products.OuterCategoryFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_sub_categories"
        style="@style/SubCategoryTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <kr.co.mash_up.a9tique.ui.widget.SwipeViewPager
        android:id="@+id/vp_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
