<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="154dp"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp">
    <TextView
        android:id="@+id/tv_inquire_title"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/btn_x"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icn_x"
        android:background="@drawable/icn_x"
        android:scaleType="fitCenter"
        android:layout_marginLeft="157dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_inquire_phone"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_inquire_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:textSize="12sp"
            android:textColor="#262626"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_inquire_message"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tv_inquire_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:textSize="12sp"
            android:textColor="#262626"/>
    </LinearLayout>

</LinearLayout>