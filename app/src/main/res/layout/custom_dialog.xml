<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="160dp"
    android:background="#ffffff">
    <TextView
        android:id="@+id/dlg_title"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>
    <EditText
        android:id="@+id/dlg_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:textSize="12sp"
        android:textColor="#000000"
        android:hint="발급된 인증코드를 입력해 주세요."
        android:textColorHint="#7d7d7d"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:cursorVisible="false"
        android:paddingBottom="6dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/dlg_cancel"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:textColor="#f1ac41"
        android:paddingTop="41dp"
        android:paddingBottom="17dp"
        android:paddingLeft="146dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/dlg_agree"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:textColor="#f1ac41"
        android:paddingTop="41dp"
        android:paddingBottom="17dp"
        android:paddingLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>