<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools">


    <data>

        <variable
            name="brand"
            type="kr.co.mash_up.a9tique.data.Brand"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="11dp"
            android:text="@{brand.headerTitle}"
            android:textColor="#000000"
            android:textSize="10sp"
            tool:text="ㄴ."/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="@{brand.nameKo}"
                android:textColor="#000000"
                android:textSize="16.7sp"
                tool:text="노티카"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="183dp"
                android:text="@{brand.nameEn}"
                android:textColor="#000000"
                android:textSize="11.8sp"
                tool:text="NAUTICA"/>

        </FrameLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/new_ic_brand_list_divider"/>

    </LinearLayout>
</layout>